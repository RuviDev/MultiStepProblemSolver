{
  "version": "user-fill",
  "one_category_per_thread": true,
  "no_cross_thread_binding": true,
  "explicit_resume_only": true,
  "switch_requires_explicit_consent": false,
  "progress_threshold": {
    "min_turns": 1,
    "evidence_used": true
  },
  "multi_intent_behavior": "primary_only",
  "survey": {
    "ask_micro_questions": true,
    "micro_question_budget": 2,
    "min_confidence_to_skip": 0.7,
    "repeat_interval_turns": 3,
    "max_emits_per_problem": 3,
    "prefer_inline_block": true,
    "suppress_if_answerability_full": true,
    "respect_user_no_questions": true,
    "use_missing_fallback": true,
    "llm_rewrite": true,
    "llm_tone": "friendly_concise"
  },
  "max_insight_questions_per_turn": 2,
  "ask_insights_only_if_intent_is_plan": true,
  "disallow_planning_in_uaa": true,
  "planning_agent_enabled": false,
  "uia": {
    "allow_llm_assist": true,
    "min_spans_for_no_assist": 2,
    "assist_mode": "only_when_sparse",
    "llm_timeout_sec": 20
  }
}